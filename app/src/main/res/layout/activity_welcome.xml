<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:gravity="center">

    <!-- Main Title Text -->
    <TextView
        android:id="@+id/textViewMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Track Your Income and\nExpenses Effortlessly"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Your Transactions Automatically Without Syncing Your Bank Account"
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <!-- Button Box -->
    <RelativeLayout
        android:id="@+id/boxDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_green_bg"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/logofamfin"
        android:contentDescription="App Logo" />

</LinearLayout>
